{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.articles'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.articles'|trans }}</h1>
    <a href="{{ url('article_create') }}" title="{{ 'action.create'|trans }}">
        {{ 'action.create'|trans }}
    </a>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'article.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'article.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'article.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'article.title') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for article in pagination.items %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.createdAt|date('d.m.Y') }}</td>
                    <td>{{ article.updatedAt|date('d.m.Y') }}</td>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="{{ url('article_show', {id: article.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ url('article_edit', {id: article.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ url('article_delete', {id: article.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}