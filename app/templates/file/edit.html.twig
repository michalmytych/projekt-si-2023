{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.file_update_for_article'|trans }}
{% endblock %}

{% block body %}

    <a href="{{ url('article_index') }}" title="{{ 'action.back'|trans }}">
        {{ 'action.back'|trans }}
    </a>

    {% include 'article/partials/_main_image.html.twig' with {'article': article, 'editable': false} %}

    <h1>{{ 'title.file_update_for_article'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('article_index') }}" class="btn btn-link">
            {{ 'action.back'|trans }}
        </a>
    </div>
    {{ form_end(form) }}

{% endblock %}