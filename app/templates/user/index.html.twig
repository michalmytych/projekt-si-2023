{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.users'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.users'|trans }}</h1>

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'user.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.nickname'|trans, 'user.nickname') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.email'|trans, 'email.email') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.roles'|trans, 'email.roles') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nickname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        <a href="{{ url('user_show', {id: user.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ url('user_edit_role', {id: user.id}) }}" title="{{ 'action.user_edit_role'|trans }}">
                            {{ 'action.user_edit_role'|trans }}
                        </a>
                        <a href="{{ url('user_change_password', {'id': user.id}) }}">
                            {{ 'action.user_change_password'|trans }}
                        </a>
                        <a href="{{ url('user_edit_profile', {'id': user.id}) }}">
                            {{ 'action.user_edit_profile'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}