            <div>{{ app.user.email }}</div>
            <div>
                <a href="{{ url('user_change_password', {'id': app.user.id}) }}">{{ 'label.user_change_password'|trans }}</a>
                <a href="{{ url('user_edit_profile', {'id': app.user.id}) }}">{{ 'label.user_edit_profile'|trans }}</a>
                <a href="{{ url('app_logout') }}">{{ 'action.logout'|trans }}</a>
            </div>
        {% else %}
            <div>
                <a href="{{ url('app_login') }}">{{ 'action.login'|trans }}</a>
                <a href="{{ url('app_register') }}">{{ 'action.register'|trans }}</a>
