<nav class="navbar navbar-expand-lg navbar-light rounded">

    <div style="width: 65%;">
        <a href="{{ url('article_index') }}" title="{{ 'articles'|trans }}">
            {{ 'articles'|trans }}
        </a>

        {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.isAdmin() %}
            <a href="{{ url('category_index') }}" title="{{ 'categories'|trans }}">
                • {{ 'categories'|trans }}
            </a>
            <a href="{{ url('tag_index') }}" title="{{ 'tags'|trans }}">
                • {{ 'tags'|trans }}
            </a>
            <a href="{{ url('user_index') }}" title="{{ 'users'|trans }}">
                • {{ 'users'|trans }}
            </a>
        {% endif %}
    </div>

    <div class="text-right">
